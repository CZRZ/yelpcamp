<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin:0 auto;">

            <h1>
                new campground
            </h1>

            <form action="/campground" method="POST">
                <div class="form-group">
                    <input class="form-control" name="name" type="text" placeholder="campground name">
                </div>
                <div class="form-group">
                    <input class="form-control" name="image" type="text" placeholder="campground image">
                </div>
                <div class="form-group">
                    <input class="form-control" name="price" type="number" placeholder="campground price" min="0.01"
                           step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" name="description" type="text" placeholder="campground description">
                </div>

                <button class="btn btn-lg btn-primary">
                    submit!
                </button>
            </form>
            <a href="/campground">go back</a>
        </div>


    </div>
</div>

<%- include("../partials/footer") %>
