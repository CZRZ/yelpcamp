<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin:0 auto;">

            <h1>
                Edit <%= campground.name %>
            </h1>

            <form action="/campground/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[price]" type="number" value="<%= campground.price %>"
                           min="0.01"
                           step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[description]" type="text"
                           value="<%= campground.description %>">
                </div>
                <button class="btn btn-lg btn-primary">
                    submit!
                </button>
            </form>
            <a href="/campground">go back</a>
        </div>


    </div>
</div>

<%- include("../partials/footer") %>
